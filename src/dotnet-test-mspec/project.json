{
    "version": "0.2.0-alpha3",
    "name": "dotnet-test-mspec",
    "description": "'dotnet test' support for Machine.Specifications (MSpec).",
    "authors": [
        "Ivan Zlatev"
    ],
    "packOptions": {
        "projectUrl": "https://github.com/ivanz/dotnet-test-mspec",
        "repository": {
            "type": "git",
            "url": "https://github.com/ivanz/dotnet-test-mspec"
        },
        "tags": [ "mspec", "machine.specifications", "test", "tdd" ],
        "requireLicenseAcceptance": false,
        "licenseUrl": "https://github.com/ivanz/dotnet-test-mspec/blob/master/LICENSE.txt"
    },
    "buildOptions": {
        "emitEntryPoint": true
    },
    "frameworks": {
        "net45": {
            "frameworkAssemblies": {
                "System.Xml": "*",
                "System.Xml.Linq": "*"
            },
            "dependencies": {
                "Machine.Specifications.Runner.Utility": "0.*",
                "Microsoft.NETCore.Platforms": {
                    "version": "*",
                    "type":"build"
                }
            }
        },
        "netcoreapp1.0": {
            "buildOptions": {
                "define": [
                    "NETCORE"
                ]
            },
            "dependencies": {
                "Microsoft.NETCore.App": {
                    "version": "1.*",
                    "type": "platform"
                },
                "System.Runtime.Loader": "4.*",
                "System.Xml.XPath": "4.*",
                "System.Xml.XPath.XDocument": "4.*"
            }
        }
    }
}
